generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique
  password_hash String
  createdAt DateTime @default(now())

  @@map("users")
}

model CheckIn {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  validatedAt DateTime?

  @@map("check_ins")
}

model Gym {
  id          String  @id @default(uuid())
  title       String
  description String?
  phoneNumber String?
  latitude    Decimal
  longitude   Decimal

 @@map("gyms")
}
