generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique
  password_hash String
  createdAt DateTime @default(now())

  @@map("users")
  checkIns CheckIn[]
}

model CheckIn {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  validatedAt DateTime?

  user_id String
  gym_id String

  user User @relation(fields: [user_id], references: [id])
  gym Gym @relation(fields: [gym_id], references: [id])

  @@map("check_ins")
}

model Gym {
  id          String  @id @default(uuid())
  title       String
  description String?
  phoneNumber String?
  latitude    Decimal
  longitude   Decimal
  
  checkIns CheckIn[]

 @@map("gyms")
}